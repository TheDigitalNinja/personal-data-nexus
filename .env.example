# Application Settings
NODE_ENV=development
LOG_LEVEL=info

# Data Paths
DATA_DIR=./data
IMPORT_DIR=./imports
EXPORT_DIR=./llm-ready

# Fitbit API
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret
FITBIT_REDIRECT_URI=http://localhost:3000/callback

# Google API (for Google Drive, Calendar)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/google-callback

# Scheduler Settings
SCHEDULE_ENABLED=true
SCHEDULE_CRON_EXPRESSION="0 0 * * 0"  # Run at midnight on Sundays

# Security
ENCRYPTION_KEY=32_character_random_string_for_security

# Optional: Notification Settings
NOTIFY_ON_COMPLETION=false
NOTIFY_EMAIL=your_email@example.com

# Optional: File Upload Service (if needed)
# UPLOAD_SERVICE_API_KEY=your_api_key